<h1>New Game</h1>
<h2>Better spell a great long word from this mess, loser!</h2>

<%= @letters %>

<form action="/score" method="get">
  <%= hidden_field_tag :authenticity_token, form_authenticity_token %>
  <%= hidden_field_tag :letters, @letters %>
  <input type="text" name="word" placeholder="Enter your longest word">
  <input type="submit" value="Submit!">
</form>
